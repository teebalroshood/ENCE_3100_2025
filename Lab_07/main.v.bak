module main(
	// Board I/Os
	input		MAX10_CLK1_50,
	input 	[9:0]		SW,
	output	[9:0]		LEDR
);

	wire [3:0] w_count;
	wire w_tick;

	ram16x4_lut RAM1(
		.clk(SW[9]),
		.we(SW[8]),
		.addr(4'd0),
		.din(w_count),
		.dout(LEDR[3:0])
	);
	
	counter Count0 (
		.clk(w_tick),
		.enable(SW[8]), 
		.reset(SW[7]),
		.count(w_count)
	);
	
	timer_1s TIM0(
		.i_clk(MAX10_CLK1_50),
		.i_reset(SW[7]),
		.i_enable(1'b1),
		.o_tick(w_tick),
		.o_strobe()
	);
	
	assign LEDR[7:4] = w_count;
	
endmodule


